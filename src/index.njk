---
layout: default
title: LIBRETA DE VIAJE
subtitle: Viaja para volver sin volver
path: home
---
<h1 id="index-title">
    {{ title }}
</h1>
<h4 id="index-subtitle">
    {{ subtitle }}
</h4>

<div id="sectionpais" style="display: grid; grid-template-columns: repeat(5, 1fr); grid-auto-rows: auto; grid-gap: 10px; justify-items: center;">
    <!--Lista de paises-->
    {% if paises.items %}
        {% for item in paises.items %}
            <div id="box" style="width: 100px; display: flex; justify-content: center; align-items: center;">
                <a href="{{ item.url }}">{{ item.text }}</a>
            </div>
        {% endfor %}
    {% endif %}
</div>

<!--Lista de paises-->
{% set numero_de_articulos = 3 %}
{% set conteo = 0 %}
<div class="cards-container">
    {% for post in collections.post %}
        {% if conteo < numero_de_articulos %}
            <div class="article-card">
                <img src="{{ post.data.image }}" alt="{{ post.data.image_alt }}">

                <h2>
                    <a href="{{post.url}}">{{ post.data.title }}</a>

                </h2>
                <div class="article-card-description">{{ post.data.description }}</div>
            </div>
            {% set conteo = conteo + 1 %}
        {% endif %}
    {% endfor %}
</div>